  <!--vista y formularios Control de montos asignados budget.amount.allocated.--> 
  <record  id="view_form_control_montos_asig" model="ir.ui.view">
    <field name="name">Control de montos asignados</field>
    <field name="model">budget.amount.allocated</field>
    <field name="arch" type="xml">
      <form >
        <header>
          <button name="read_file" string="Importar" attrs="{'invisible':[('correct_import' ,'=' ,True),('state','!=','draft')]}" type="object" class="oe_highlight"/>
          <button name="function_request" states="draft" string="Solicitar" type="object" class="oe_highlight"/>
          <button name="function_approve" states="solicitud" string="Aprobar" type="object" class="oe_highlight"/>
          <button name="function_reject" states="solicitud" string="Rechazar" type="object" class="oe_highlight"/>
          <button name="function_cancel" states="draft,solicitud" string="Cancelar" type="object" class="oe_highlight"/>
          <button name="function_draft" states="cancel" string="Borrador" type="object" class="oe_highlight"/>
           <field name="state" widget="statusbar"/>
        </header>     
         <sheet>
            <group>
              <group> 
                <field name="code"/>
                <field name="budget_id"/>
                <field name="user_id"/>
                <field name="date_import"/>
                <field name="correct_import" invisible="0" />
              </group>
              <group>                
                <field name="filename" invisible="1" />
                <field name="file_amount_allocated" filename="filename"/>
                <field name="reason_for_rejection"/>
                <field name="description"/>       
                <field name="record_numbers"/>       
                <field name="imported_registration_numbers"/>                              
              </group>
            </group>
            <notebook>
              <page string="Control de depósitos">
                <sheet>
                <group>
                  <group>
                    <field name="currency_id" />
                    <field name="assigment_amount" />
                    <field name="deposit_amount" />
                    <field name="pending_amount" />
                    <field name="deposit_date" />
                  </group>
                  <group>
                    <field name="deposit_account_bank_id" />
                    <field name="comments" />
                    <field name="move_id" />
                  </group>
                </group>
              </sheet>
              </page>
              <page string="Lineas">
                <sheet>
                  <field name="budget_amount_allocated_line_ids">
                    <tree string="Tabla control" editable="bottom">
                      <field name="allocated_deposit_id" invisible="1"/>
                      <field name="programmatic_code"/>
                      <field name="amount"/>
                      <field name="date"/>
                      <field name="subdependence_id" optional="show"/>
                      <field name="program_id" optional="show"/>
                      <field name="subprogram_id" optional="show"/>
                      <field name="item_id" optional="show"/>
                      <field name="resource_origin_id" optional="show"/>
                      <field name="institutional_activity_id" optional="show"/>
                      <field name="conpp_id" optional="show"/>
                      <field name="conpa_id" optional="show"/>
                      <field name="expense_type_id" optional="show"/>
                      <field name="geographic_location_id" optional="show"/>
                      <field name="key_portfolio_id" optional="show"/>                      
                    </tree>                    
                  </field>                                 
                </sheet>
              </page>
              <page string="Invalidos">
                <sheet>
                  <field name="invalid_rows">    
                    <tree string="Incorrectos" editable="bottom">
                      <field name="code"/>
                      <field name="description"/>
                      <field name="crossovered_budget_id" invisible="1"/>
                     </tree>             
                  </field>                                 
                </sheet>
              </page>
            </notebook>            
         </sheet> 
      </form>
    </field> 
  </record> 

